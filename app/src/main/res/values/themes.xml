<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PayCoin" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#748513E2</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/textHint</item>
        <!-- Secondary brand color. -->
<!--        <item name="colorSecondary">#6D0061</item>-->
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#AC9FEC</item>
        <item name="android:navigationBarColor">#E3B8F5</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/new_style_fonts</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
       <item name="hintTextColor">@color/textHint</item>
        <item name="boxStrokeColor">#72720FD0</item>
        <item name="hintEnabled">true</item>

        <item name="boxBackgroundColor">@color/digit_fon</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/edit_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/edit_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/edit_corner_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/edit_corner_radius</item>
        <item name="endIconMode">clear_text</item>
        <item name="passwordToggleTint">@color/purple_700</item>
    </style>

    <style name="Button" parent="@style/Widget.MaterialComponents.Button">

        <item name="android:padding">14dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">@dimen/edit_corner_radius</item>
    </style>

    <style name="TextInput">
       <item name="android:textSize">18sp</item>
    </style>

    <style name="Toolbar">
        <item name="android:background">#3B702ADE</item>
    </style>

    <style name="TitleText">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>